<%doc>
###############################################################################

=head1 NAME

/workflow/manager/story/dhandler - story search result page

=head1 VERSION

$Revision: 1.8 $

=head1 DATE

$Date: 2002-01-31 00:06:20 $

=head1 SYNOPSIS

=head1 DESCRIPTION

=cut

</%doc>

<%args>
</%args>

<%once>;
my $object = 'story';
my $plural = get_class_info($object)->get_plural_name;
my $w_id;

my $profile = sub {
    my $o = shift;
    my $u = $o->get_user__id;
    my $id = $o->get_id;
    my $ret;
    if (defined $u && $u == get_user_id && chk_authz($o, EDIT, 1)) {
	$ret = [['Edit', "/workflow/profile/story/$id?checkout=1&return=search", '']];
    } else {
	$ret = [['View', "/workflow/profile/story/$id?return=search", '']];
    }
    push @$ret, [ 'Log', "/admin/events/story/$id", ''];
    return $ret;
};

my $select = sub {
    my $o = shift;
    my $u = $o->get_user__id;

    if ((not defined $u) && chk_authz($o, EDIT, 1)) {
	if ($o->get_workflow_id) {
	    return ['Checkout', 'story_prof|checkout_cb'];
	} else {
	    return ['Checkout', 'story_prof|recall_cb', $o->get_id.'|'.$w_id];
	}
    }
    return;
};

my $addition = sub {
    if (chk_authz($_[0], CREATE, 1)) {
        return ['Create', "/workflow/profile/story/new/$w_id"];
    }
    return;
};

my $exclude = sub { ! chk_authz($_[0], READ, 1) };
</%once>
<%init>;
# Get the workflow ID.
($w_id) = $r->uri =~ m!/(\d+)/?$!;

# Grab the workflow from the cache.
my $wf = $c->get('__WORKFLOWS__');
for (@$wf) { $wf = "&quot;$_->{name}&quot;" and last if $_->{id} == $w_id }
</%init>
<& '/widgets/wrappers/sharky/header.mc',
   title => "Find $plural",
   context => "Workflow | $wf | Find $plural"
 &>

<& '/widgets/search/search.mc',
   'object' => $object,
   'type'   => 'story',
&>

<form method="post" action="<% $r->uri %>" name="story_manager">
<& '/widgets/listManager/listManager.mc',
	object    => $object,
	sortBy    => 'title',
        fields    => [ qw(id title cover_date)],
        exclude   => $exclude,
	profile   => $profile,
        title     => '%n Found',
        addition  => $addition,
	select    => $select,
        behavior  => 'expand',
&>
<p></p>
<input type="image" src="/media/images/checkout_red.gif" border=0 name="Checkout" value="Checkout">
</form>

<& /widgets/wrappers/sharky/footer.mc &>



