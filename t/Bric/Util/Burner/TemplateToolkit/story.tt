<h1>[% story.get_title %]</h1>
[% PERL %]
# Make sure that we can do stuff in PERL blocks.
print "<h2>", $stash->get('story')->get_cover_date('%Y.%m.%d'), "</h2>\n";
[% END %]
[% FOREACH e = element.get_elements('header', 'para', '_pull_quote_') %]
    [% kn = e.get_key_name %]
    [% IF kn == 'para' %]
<p>[% e.get_data %]</p>
    [% ELSIF kn == 'header' %]
        [% # display_element() should just return a value. %]
<h3>[% burner.display_element(e) %]</h3>
    [% ELSE %]
        [% # Test display_element(). %]
        [% burner.display_element(e) %]
    [% END %]
[% END %]
[% burner.display_pages('_page_') %]
